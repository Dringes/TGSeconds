import ptbot
from dotenv import load_dotenv
import os
from pytimeparse import parse


def render_progressbar(total, iteration, prefix='', suffix='', length=30, fill='█', zfill='░'):
    iteration = min(total, iteration)
    percent = "{0:.1f}".format(100 * (iteration / float(total)))
    filled_length = int(length * iteration // total)
    pbar = fill * filled_length + zfill * (length - filled_length)
    return '{0} |{1}| {2}% {3}'.format(prefix, pbar, percent, suffix)


def main():
    load_dotenv()
    bot = ptbot.Bot(os.getenv("TG_TOKEN"))

    message = {}
    total_by_chat = {}

    def reply(chat_id, text):
        bot.create_countdown(parse(text), notify, chat_id=chat_id)

    def notify(secs_left, chat_id):
        total = total_by_chat.get(chat_id, secs_left)
        total_by_chat[chat_id] = total

        iteration = total - secs_left
        bar = render_progressbar(total, iteration)

        text = (
            "Время вышло"
            if secs_left == 0
            else "Осталось {} секунд!\n{}".format(secs_left, bar)
        )

        if chat_id not in message:
            message[chat_id] = bot.send_message(chat_id, text)
            return

        bot.update_message(chat_id, message[chat_id], text)

    bot.reply_on_message(reply)
    bot.run_bot()


if __name__ == "__main__":
    main()
