import os

import ptbot
from dotenv import load_dotenv
from pytimeparse import parse


def render_progressbar(total, iteration, length=30, fill="█", zfill="░"):
    iteration = min(total, iteration)
    percent = "{0:.1f}".format(100 * iteration / float(total))
    filled_length = int(length * iteration // total)
    bar = fill * filled_length + zfill * (length - filled_length)
    return "|{}| {}%".format(bar, percent)


def reply(bot, message, total_by_chat, chat_id, text):
    seconds = parse(text)
    if not seconds:
        bot.send_message(chat_id, "Пиши так: 3s, 2m, 1h")
        return

    total_by_chat[chat_id] = seconds
    bot.create_countdown(
        seconds, notify, chat_id=chat_id, bot=bot, message=message, total_by_chat=total_by_chat
    )


def notify(secs_left, chat_id, bot, message, total_by_chat):
    total = total_by_chat.get(chat_id, secs_left)
    iteration = total - secs_left

    bar = render_progressbar(total, iteration)

    text = "Время вышло" if secs_left == 0 else "Осталось {} секунд!\n{}".format(secs_left, bar)

    if chat_id not in message:
        message[chat_id] = bot.send_message(chat_id, text)
        return

    bot.update_message(chat_id, message[chat_id], text)


def main():
    load_dotenv()
    bot = ptbot.Bot(os.getenv("TG_TOKEN"))

    message = {}
    total_by_chat = {}

    bot.reply_on_message(lambda chat_id, text: reply(bot, message, total_by_chat, chat_id, text))
    bot.run_bot()


if __name__ == "__main__":
    main()
